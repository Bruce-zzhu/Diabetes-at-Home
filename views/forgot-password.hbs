<script>
function withValue(){
    if (document.getElementById("email").value != ""){
        document.getElementById("email-submit").style.backgroundColor = "var(--green-color)"
        document.getElementById("email-submit").style.cursor = "pointer"
    } else{
        document.getElementById("email-submit").style.backgroundColor = "var(--brown-color)"
        document.getElementById("email-submit").style.cursor = "default"
    }
}
</script>

<div class="buffer"></div>
<section class="password-container">
    <h1>Forgot password?</h1>
    <p>Enter your account's email to reset your password</p>
    <form onchange="withValue()">
        <input type="email" name="email" id="email" placeholder="user@email.com">
        <input type="button" id="email-submit" onclick="location.href='/reset_password';" value="SEND EMAIL"> 
    </form>
    <img class="password-logo" src="/images/logo.svg" alt="logo" />
</section>