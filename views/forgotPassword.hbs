<script src="/scripts/set-password.js"></script>

<div class="buffer"></div>
<section class="password-container">
    <h1>Forgot password?</h1>
    <p>Enter your account's email to reset your password</p>
    <form action="/forgot-password" method="post" onchange="emailWithValue()">
        <input type="email" name="email" id="email" placeholder="user@email.com">
        <button disabled="true" id="email-submit">SEND EMAIL</button>
    </form>
    <img class="password-logo logo" src="/images/logo-white.svg" alt="logo" />
</section>