<div id="register-container">
    <form action="/clinician/register" method="POST">
        <div class="header">
        <div class="header-text-wrapper">
            <h1 class="header-text">Basic patient information</h1>
        </div>
        </div>
        <div class="row g-1" >
            <div class="col-5">
                <div class="p-3" style="margin-left: 110px;" >First name:
                    <input required type="text"  name="firstName" />
                </div>
            </div>
            <div class="col-5">
                <div class="p-3" style="margin-left: 70px;" >Last name:
                    <input required type="text"  name="lastName" />
                </div>
            </div>
            <div class="col-5">
                <div class="p-3" style="margin-left: 110px;">Age:
                    <input required type="number"  name="age" />
                </div>
            </div>
            <div class="col-5">
                <div class="p-3" style="margin-left: 70px;">Gender:
                    <select required name="gender">
                        <option value=""></option>
                        <option value="male">Male</option>
                        <option value="female">Female</option>
                        <option value="other">Other</option>
                    </select>
                </div>
            </div>
            <div class="col-5">
                <div class="p-3" style="margin-left: 110px;">Email:
                   <input required type="email" id="email" name="email">
                </div>
            </div>
            <div class="col-5">
                <div class="p-3" style="margin-left: 70px;">Password:
                  <input required type="text"  name="password" />
                </div>
            </div>
        </div>
